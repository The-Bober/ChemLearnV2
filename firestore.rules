
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection:
    // - Authenticated users can read their own user document.
    // - Authenticated users can create their own user document (e.g., on sign up).
    // - Authenticated users can update their own user document.
    // - Admin users can read and write any user document (for potential future user management).
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true; // Only admins can delete user docs
    }

    // Lectures collection:
    // - Authenticated users can read lectures.
    // - Only admin users can create, update, or delete lectures.
    match /lectures/{lectureId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Lessons collection:
    // - Authenticated users can read lessons.
    // - Only admin users can create, update, or delete lessons.
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Quizzes collection:
    // - Authenticated users can read quizzes.
    // - Only admin users can create, update, or delete quizzes.
    match /quizzes/{quizId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Activities collection:
    // - Authenticated users can create activity logs (e.g., logging their own actions).
    // - Only admin users can read all activity logs.
    // - Updates and deletes are generally not allowed from the client for auditability.
    match /activities/{activityId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
      allow update, delete: if false; // Disallow client-side updates/deletes
    }

    // UserQuizCompletions collection:
    // - Authenticated users can create their own quiz completion records.
    // - Authenticated users can read their own quiz completion records.
    // - Admin users can read all quiz completion records.
    // - Updates and deletes are generally not allowed from the client.
    match /userQuizCompletions/{completionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && 
                      (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true);
      allow update, delete: if false; // Disallow client-side updates/deletes
    }

    // Default deny for any path not explicitly matched
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
