
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is an admin
    function isAdmin(userId) {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.isAdmin == true;
    }

    // Lectures: Public read, Admin write/delete
    match /lectures/{lectureId} {
      allow read: if true; // Anyone can read lectures
      allow create, update, delete: if isAdmin(request.auth.uid);
    }

    // Lessons: Public read, Admin write/delete
    match /lessons/{lessonId} {
      allow read: if true; // Anyone can read lessons
      allow create, update, delete: if isAdmin(request.auth.uid);
    }

    // Quizzes: Public read, Admin write/delete
    match /quizzes/{quizId} {
      allow read: if true; // Anyone can read quiz details
      allow create, update, delete: if isAdmin(request.auth.uid);
    }
    
    // Users:
    // - User can create their own document (on signup if authenticated)
    // - User can read their own document or admin can read any.
    // - User can update their own non-admin fields.
    // - Admin can read/update any user document (including isAdmin field).
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin(request.auth.uid));
      // Allow create if the user is creating their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow update if user is updating their own doc (but not isAdmin field directly unless they are admin)
      // or if an admin is updating any doc.
      allow update: if request.auth != null && 
                      ( (request.auth.uid == userId && !("isAdmin" in request.resource.data && request.resource.data.isAdmin != resource.data.isAdmin) ) || 
                        isAdmin(request.auth.uid) 
                      );
      allow delete: if isAdmin(request.auth.uid); // Only admins can delete user documents
    }

    // Activities: Authenticated users can create, Admins can read
    match /activities/{activityId} {
      allow create: if request.auth != null;
      allow read: if isAdmin(request.auth.uid);
      // Activity logs should generally be immutable or only deletable by admins for audit purposes.
      allow update: if false; 
      allow delete: if isAdmin(request.auth.uid);
    }
  }
}
