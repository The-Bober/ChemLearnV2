
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the authenticated user is an admin
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // User profiles
    // - Authenticated users can read any profile (e.g., for display names).
    // - A user can write to their own profile.
    // - An admin can write to any user's profile.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
                     request.auth.uid == userId || isAdmin()
                   );
    }

    // Lectures
    // - Authenticated users can read lectures.
    // - Only admins can create, update, or delete lectures.
    match /lectures/{lectureId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    // Lessons
    // - Authenticated users can read lessons.
    // - Only admins can create, update, or delete lessons.
    match /lessons/{lessonId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    // Quizzes
    // - Authenticated users can read quizzes.
    // - Only admins can create, update, or delete quizzes.
    match /quizzes/{quizId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    // Activities
    // - Authenticated users can create activity logs (e.g., when they complete a quiz).
    // - Only admins can read or delete activity logs (e.g., for an admin dashboard).
    match /activities/{activityId} {
      allow create: if request.auth != null;
      allow read, delete: if isAdmin();
    }

    // UserQuizCompletions
    // - A user can create a completion record for themselves.
    // - A user can read their own completion records.
    // - Admins can read any completion records.
    match /userQuizCompletions/{completionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && (
                    request.auth.uid == resource.data.userId || isAdmin()
                  );
      // Update/delete for completions can be added if needed, likely admin-only or user-only for specific cases.
      // allow update, delete: if isAdmin(); // Example if admins need to modify/delete
    }

    // Default deny: Explicitly deny read/write to any path not covered above.
    // This is a security best practice.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
